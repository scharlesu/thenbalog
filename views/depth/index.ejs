<% getTime = function(time) { var timeDate = new Date(time); return (
timeDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})) } %>
<div>
  <h2>Games of <%= scoreboardData.day.date %></h2>
  <% scoreboardData.events.forEach(game => { %>
  <div style="background-color: blue; color: white; text-align: center">
    <h3><%= game.shortName %> <%=getTime(game.date)%></h3>
  </div>
  <div style="display: flex; text-align: center; justify-content: center">
    <% depthData.forEach(team => { %> <%if(game.name.includes(team.team)) {%>
    <div style="padding: 1rem">
      <h3><%= team.team %></h3>
      <div>
        <table style="border: solid">
          <tr>
            <th></th>
            <% for (let i= 1; i< team.depth.pg.length+1; i++){ %>
            <th><%=i%></th>
            <%}%>
          </tr>
          <tr>
            <th>PG</th>
            <% team.depth.pg.forEach(player => { %>
            <td
              id="<%=player%>"
              class="t_player"
              style="<%= injuryData.out.includes(player) ? 'color: red;' : injuryData.d2d.includes(player)? 'color:darkgoldenrod' : '' %>"
            >
              <%= player %>
            </td>
            <%})%>
          </tr>
          <tr>
            <th>SG</th>
            <% team.depth.sg.forEach(player => { %>
            <td
              id="<%=player%>"
              class="t_player"
              style="<%= injuryData.out.includes(player) ? 'color: red;' : injuryData.d2d.includes(player)? 'color:darkgoldenrod' : '' %>"
            >
              <%= player %>
            </td>
            <%})%>
          </tr>
          <tr>
            <th>SF</th>
            <% team.depth.sf.forEach(player => { %>
            <td
              id="<%=player%>"
              class="t_player"
              style="<%= injuryData.out.includes(player) ? 'color: red;' : injuryData.d2d.includes(player)? 'color:darkgoldenrod' : '' %>"
            >
              <%= player %>
            </td>
            <%})%>
          </tr>
          <tr>
            <th>PF</th>
            <% team.depth.pf.forEach(player => { %>
            <td
              id="<%=player%>"
              class="t_player"
              style="<%= injuryData.out.includes(player) ? 'color: red;' : injuryData.d2d.includes(player)? 'color:darkgoldenrod' : '' %>"
            >
              <%= player %>
            </td>
            <%})%>
          </tr>
          <tr>
            <th>C</th>
            <% team.depth.c.forEach(player => { %>
            <td
              id="<%=player%>"
              class="t_player"
              style="<%= injuryData.out.includes(player) ? 'color: red;' : injuryData.d2d.includes(player)? 'color:darkgoldenrod' : '' %>"
            >
              <%= player %>
            </td>
            <%})%>
          </tr>
        </table>
      </div>
    </div>
    <% } %> <% })%>
  </div>
  <% })%>
</div>
